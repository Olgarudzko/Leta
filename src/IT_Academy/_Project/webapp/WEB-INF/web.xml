<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <display-name>Servlet Controller</display-name>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>IT_Academy._Project.java.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/do</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingUTF8</filter-name>
        <filter-class>IT_Academy._Project.java.controller.UTF8</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
         </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingUTF8</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>